<!-- views/voted.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Vote Confirmed! - Voting App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-100">

  <div class="min-h-screen flex items-center justify-center py-12 px-4">
    <div class="max-w-md w-full text-center bg-white p-8 rounded-2xl shadow-lg">
      
      <div>
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100">
          <svg class="h-10 w-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
        </div>
        <div class="mt-5">
          <h3 class="text-2xl leading-6 font-extrabold text-gray-900">Thank You For Voting!</h3>
          <div class="mt-4 text-base text-gray-600">
            <p>Your vote for</p>
            <p class="font-bold text-indigo-600 text-lg my-2"><%= candidate.name %> (<%= candidate.party %>)</p>
            <p>has been successfully recorded.</p>
          </div>
        </div>
      </div>

      <div class="mt-8">
        <a href="/candidate/results" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-6 py-3 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700">
          View Live Results
        </a>
        <p class="mt-4 text-sm">
            <a href="/user/profile" class="font-medium text-gray-500 hover:text-gray-400">
                &larr; Back to my Profile
            </a>
        </p>
      </div>

    </div>
  </div>

</body>
</html>